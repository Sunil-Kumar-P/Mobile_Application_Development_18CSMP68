<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/json_parse"
        android:layout_width="128dp"
        android:layout_height="84dp"
        android:layout_marginTop="44dp"
        android:background="#2196F3"
        android:text="parse json"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/xml_parse"
        android:layout_width="119dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="#FF9800"
        android:text="parse xml"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/json_parse" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="192dp"
        android:layout_height="421dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xml_parse"
        app:layout_constraintVertical_bias="0.833">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="center"
            android:text="City Name"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="Longitude"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:gravity="center"
            android:text="Latitude"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center"
            android:text="temperature"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:gravity="center"
            android:text="Humidity"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="215dp"
        android:layout_height="418dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xml_parse"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/city_name"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#C1B2B2"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="#C1B2B2"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="#C1B2B2"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="#C1B2B2"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#C1B2B2"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>